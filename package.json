    "gulp-clean": "^0.3.2",
    "gulp-typescript": "^3.2.1",
    "jest": "^20.0.4",
    "pegjs": "^0.10.0",
    "ts-jest": "^20.0.10",
    "ts-loader": "^2.3.3",
